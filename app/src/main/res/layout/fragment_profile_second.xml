<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/teacher_circle_background"
        tools:context=".ui.teacherdata.ui.home.second.ProfileSecondFragment">


    <RelativeLayout
            android:id="@+id/tch_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"/>
        </LinearLayout>
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/teacher_name"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請輸入姓名"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout

            android:visibility="gone"
            android:id="@+id/tch_inside_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/cn_name"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中文姓名"/>
        </LinearLayout>
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/en_name"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英文姓名"/>
        </LinearLayout>
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
    <RelativeLayout
            android:id="@+id/tch_gender_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別"/>
        </LinearLayout>
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/teacher_gender"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請輸入性別"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tch_inside_gender_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性別"/>
            <Spinner
                    android:id="@+id/tch_gender_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
    <RelativeLayout
            android:id="@+id/tch_education_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最高學歷"/>
        </LinearLayout>
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/teacher_education"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請輸入學歷及專長資訊"/>
        </LinearLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/tch_inside_education_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="學校分類"/>
                <Spinner
                        android:id="@+id/tch_education_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="學校"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                <EditText
                        android:id="@+id/tch_school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>
        <LinearLayout

                android:gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="學位"/>
                <Spinner
                        android:id="@+id/tch_phd_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="科系"/>
                <EditText
                        android:id="@+id/tch_depart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>



        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/tch_expert"
                    android:hint="學術專長及研究"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
    <RelativeLayout
            android:id="@+id/tch_birthday_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"/>
        </LinearLayout>
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/teacher_birthday"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="請輸入生日"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
            android:visibility="gone"
            android:id="@+id/tch_inside_birthday_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"/>
            <EditText
                    android:id="@+id/tch_birthday_spinner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
    <RelativeLayout
            android:id="@+id/tch_person_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身分資訊"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/tch_country_view"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/teacher_country"
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="請輸入個人資訊"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/tch_person_inside_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="25dp"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身分資訊"/>
                <Spinner
                        android:id="@+id/tch_person_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <EditText
                            android:id="@+id/tch_person_id"
                            android:textSize="25dp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="身分證是別號"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
      <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
          <LinearLayout
                  android:gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
              <TextView
                      android:textSize="25dp"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="國籍"/>
              <Spinner
                      android:id="@+id/tch_country_spinner"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
          </LinearLayout>
          <LinearLayout
                  android:gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
              <TextView
                      android:textSize="25dp"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="族籍"/>

              <Spinner
                      android:id="@+id/tch_clan_spinner"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
          </LinearLayout>
          <LinearLayout
                  android:gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
              <TextView
                      android:textSize="25dp"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="是否為原住民"/>
              <Spinner
                      android:id="@+id/tch_abor_spinner"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
          </LinearLayout>
      </LinearLayout>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>