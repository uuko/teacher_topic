<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@drawable/item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/proVendor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="服務廠商/單位"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="3"
                android:text="服務性質"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/proNature"
                android:layout_weight="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="3"
                android:text="是否具簽約文件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/proSign"
                android:layout_weight="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/proCaseNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="案號"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/proCaseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="案名"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_weight="3"
                android:text="服務內容是否與教師專業技能相關"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Spinner
                android:id="@+id/proContent"
                android:layout_weight="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="從"/>
        <EditText
                android:id="@+id/proStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="至"/>
        <EditText
                android:id="@+id/proStopDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="為簽約服務期間"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:id="@+id/proRebate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="每件案件回饋金$"/>
    </LinearLayout>

    <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:layout_margin="10dp"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_button"/>
        <Button
                android:layout_margin="10dp"
                android:text="保存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_btn"/>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>